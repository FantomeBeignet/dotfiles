layout {
    default_tab_template {
	pane split_direction="vertical" {
	    pane borderless=true
	    children
	}
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    swap_tiled_layout {
        tab {
	    pane split_direction="vertical" {
	        pane split_direction="horizontal" stacked=false {
	       	    pane
	       	    pane
	        }
	    }
	}
	tab min_panes=5 {
	    pane split_direction="vertical" {
	    	pane stacked=true {
		    children;
	        }
	    }
	}
    }
}
